{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 35,
    "modules-left": [
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "tray",
        "pulseaudio",
        "custom/spacer",
        "custom/wifi-toggle",
        "custom/spacer",
        "bluetooth",
        "battery",
        "cpu",
        "memory"
    ],
    "hyprland/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "on-click": "activate"
    },
    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "clock": {
        "format": "{:%I:%M %p}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": " Muted",
        "on-click": "pavucontrol",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", ""]
        }
    },


    "bluetooth": {
        "format": " {status}",
        "format-disabled": "󰂲 Disabled",
        "format-off": "󰂲 Off",
        "format-on": "󰂯 On",
        "format-connected": "󰂱 {num_connections} Connected",
        "format-icons": {
            "disabled": "󰂲",
            "off": "󰂲",
            "on": "󰂯",
            "connected": "󰂱"
        },
        "tooltip-format-connected": "{controller_alias}\n\nConnected Devices:\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "  - {device_alias} ({device_address})",
        "on-click": "blueman-manager",
        "interval": 1
    },
    "custom/wifi-toggle": {
        "format": "{}",
        "exec": "/home/dhili/.config/waybar/scripts/wifi-toggle.sh",
        "on-click": "/home/dhili/.config/waybar/scripts/wifi-toggle.sh toggle",
        "interval": 1
    },
    "custom/spacer": {
        "format": "  "
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": ["", "", "", "", ""]
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": true
    },
    "memory": {
        "format": " {}%"
    }
}